<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.widyatama.univcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MvpApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".features.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".features.favorite.FavoriteActivity" />
        <activity android:name=".features.campusType.CampusTypeActivity">
        </activity>
        <activity android:name=".features.country.CountryActivity" />
        <activity android:name=".features.filter.FilterActivity" />
        <activity android:name=".features.list.ListActivity" />
        <activity android:name=".features.search.SearchActivity" />
        <activity android:name=".features.webview.WebViewActivity"></activity>
    </application>

</manifest>