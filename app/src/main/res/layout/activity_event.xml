<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.widyatama.nurseassistant.view.activity.EventActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_page">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </androidx.viewpager.widget.ViewPager>

        <com.rd.PageIndicatorView
            android:id="@+id/pagerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:piv_animationType="scale"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="@color/blue"
            app:piv_unselectedColor="@color/grayLight"
            app:piv_viewPager="@id/view_pager"
            app:piv_padding="8dp"
            app:piv_radius="5dp" />

        <TextView
            style="@style/HeaderFont.Bold"
            android:layout_marginTop="16dp"
            android:text="In this week"
            android:textColor="@color/grayDark"/>
        <TextView
            style="@style/HeaderFont"
            android:layout_marginTop="16dp"
            android:text="15 September 2019"
            android:textSize="14sp"
            android:textColor="@color/grayDark"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCardView">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bookmark_green_24dp"/>

                <TextView
                    android:id="@+id/titleMenu"
                    style="@style/HeaderFont.Bold"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/image1"
                    android:text="Sosialisasi Bahaya Narkoba"
                    android:textSize="16sp"
                    android:textColor="@color/blueLight"/>

                <TextView
                    style="@style/HeaderFont"
                    android:layout_toRightOf="@id/image1"
                    android:layout_below="@id/titleMenu"
                    android:text="Dilakukan di desa Karang Gaya,"
                    android:textSize="14sp"
                    android:textColor="@color/grayLight"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            style="@style/HeaderFont"
            android:text="16 September 2019"
            android:textSize="14sp"
            android:textColor="@color/grayDark"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCardView">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bookmark_green_24dp"/>

                <TextView
                    android:id="@+id/titleMenu1"
                    style="@style/HeaderFont.Bold"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/image2"
                    android:text="Gathering Rancaganis Ke-IV"
                    android:textSize="16sp"
                    android:textColor="@color/blueLight"/>

                <TextView
                    style="@style/HeaderFont"
                    android:layout_toRightOf="@id/image2"
                    android:layout_below="@id/titleMenu1"
                    android:text="Dilakukan di Hotel Lingga"
                    android:textSize="14sp"
                    android:textColor="@color/grayLight"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>





</LinearLayout>
