<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_hover"
        android:clickable="true"
        android:padding="@dimen/padding_page"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_radio_button_checked_black_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicine"
                style="@style/HeaderFont"
                android:text="Pharacetamol"
                android:textColor="@color/darkerGray"/>
            <TextView
                android:id="@+id/medicineSub"
                style="@style/HeaderFont"
                android:text="1 Pill"
                android:textSize="12dp"
                android:textColor="@color/grayLight"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>